<UserControl
    x:Class="WpfApplication.View.PanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <Grid>
        <Button
            Margin="10"
            Command="{DXBinding Expr='@a($dxdo:LayoutPanel).DockItemState == $dxdo:DockItemState.Floating ? DockCommand : FloatCommand'}"
            Content="{DXBinding Expr='@a($dxdo:LayoutPanel).DockItemState == $dxdo:DockItemState.Floating ? `Dock me` : `Float me`'}"
            Foreground="{Binding ColorBrush}" />
    </Grid>
</UserControl>